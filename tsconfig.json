{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": false,
    "allowJs": false,
    "outDir": "./out",
    "lib": [
      "es6",
      "es7",
      "es2017.object"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/*.ts"
  ]
}
